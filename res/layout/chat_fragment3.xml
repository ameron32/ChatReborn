<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/tvHost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Host Status: unknown"
        android:textColor="#0000CC" />

    <TextView
        android:id="@+id/tvUsers3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tvHost"
        android:text="no users"
        android:textColor="#CC0000" />

    <ScrollView
        android:id="@+id/svChatRecord3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tvUsers3" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvChat3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="chat unavailable" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>