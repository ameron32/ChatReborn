<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ameron32.chatreborn"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.ameron32.chatreborn.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name="com.ameron32.chatreborn.chat.server.ChatServer"
            android:icon="@drawable/ic_launcher"
            android:label="ChatServer Service" >
        </service>
        <service
            android:name="com.ameron32.chatreborn.chat.client.ChatClient"
            android:icon="@drawable/ic_launcher"
            android:label="ChatClient Service" >
        </service>
    </application>

</manifest>